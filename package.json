{
  "name": "@openzeppelin/relayer-plugin-channels",
  "version": "0.8.0",
  "description": "OpenZeppelin Relayer Plugin for Stellar Channel Accounts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "dev": "tsc --watch",
    "build": "tsc",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "lint:fix": "pnpm prettier:fix && pnpm lint:check && pnpm prettier:check",
    "prettier:check": "prettier -u --check '**/*.{js,ts,tsx,md}'",
    "prettier:fix": "prettier -u --write '**/*.{js,ts,tsx,md}'",
    "style": "pnpm lint:fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "vitest run",
    "clean": "rm -rf dist",
    "install-deps": "pnpm install --frozen-lockfile --ignore-scripts --prefer-offline",
    "install-pnpm": "npm install -g pnpm",
    "ci:version": "pnpm changeset version",
    "release": "node ./scripts/release.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OpenZeppelin/relayer-plugin-channels.git"
  },
  "author": "OpenZeppelin <contact@openzeppelin.com>",
  "license": "MIT",
  "dependencies": {
    "@actions/exec": "^1.1.1",
    "@openzeppelin/relayer-sdk": "^1.8.0",
    "@stellar/stellar-sdk": "^14.4.0",
    "axios": "^1.13.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/node": "^22.19.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.7.4",
    "typescript": "5.8.3",
    "typescript-eslint": "8.27.0",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=22.18.0",
    "npm": "use pnpm",
    "pnpm": ">=9",
    "yarn": "use pnpm"
  },
  "packageManager": "pnpm@10.14.0"
}
